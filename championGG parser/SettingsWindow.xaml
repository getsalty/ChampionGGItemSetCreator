<Window x:Class="championGG_parser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="281" Width="503" Icon="pack://siteoforigin:,,,/Resources/G.ico" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="23,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="103"><Run Text="League Directory:"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="directoryPathTextBox" HorizontalAlignment="Left" Height="23" Margin="131,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <CheckBox x:Name="mostPopularBuild" Content="Export Most Popular Build" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,108,0,0" Height="26" Width="175" IsChecked="True"/>
        <CheckBox x:Name="highestWinRateBuild" Content="Export Highest Win Rate Build" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,134,0,0" Height="26" Width="191" IsChecked="True"/>
        <Button Content="Change" HorizontalAlignment="Left" Margin="376,42,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="Button_Click"/>
        <Button x:Name="buttonSaveSettings" Content="Save Settings" HorizontalAlignment="Left" Margin="193,178,0,0" VerticalAlignment="Top" Width="120" Height="49" Click="buttonSaveSettings_Click"/>

    </Grid>
</Window>
